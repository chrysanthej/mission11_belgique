
@model Book

<div class="card m-1 p-1">
    <h4>
        @Model.Title
        <span class="badge rounded-pill bg-light text-black-50 float-end">
            <small>
                @Model.Classification
            </small>
        </span>
    </h4>
    <ul>
        <li>Written by @Model.Author</li>
        <li>@Model.Category</li>
        <li>Publisher: @Model.Publisher</li>
        <li>@Model.PageCount Pages</li>
        <li>Price: $@Model.Price</li>
        <li>ISBN: @Model.Isbn</li>
    </ul>
</div>
<br />
